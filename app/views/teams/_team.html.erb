<div id="<%= dom_id team %>">
  
    <div class="w-full rounded overflow-hidden shadow-lg shadow-gray-300">
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2">Team: <%= team.name %> </div>
        <p class="text-gray-700 text-base">
          <%= team.details %>
        </p>
      </div>
      <h3 class="px-6">Players list:</h3>
      <div class="grid grid-cols-3 gap-4 px-6 pt-4 pb-2">
        <% team.players.each do |player|  %>
          <div class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
            <%= player.fullname  %>
          </div>
        <% end %>
      </div>
      <div class="inline-flex space-x-4">
        <%= link_to  edit_team_path(team), class: "text-blue-500 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" do %>
          <svg class="w-6 h-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path fill="none" d="M15.584 10.001L13.998 8.417 5.903 16.512 5.374 18.626 7.488 18.097z"/><path d="M4.03,15.758l-1,4c-0.086,0.341,0.015,0.701,0.263,0.949C3.482,20.896,3.738,21,4,21c0.081,0,0.162-0.01,0.242-0.03l4-1 c0.176-0.044,0.337-0.135,0.465-0.263l8.292-8.292l1.294,1.292l1.414-1.414l-1.294-1.292L21,7.414 c0.378-0.378,0.586-0.88,0.586-1.414S21.378,4.964,21,4.586L19.414,3c-0.756-0.756-2.072-0.756-2.828,0l-2.589,2.589l-1.298-1.296 l-1.414,1.414l1.298,1.296l-8.29,8.29C4.165,15.421,4.074,15.582,4.03,15.758z M5.903,16.512l8.095-8.095l1.586,1.584 l-8.096,8.096l-2.114,0.529L5.903,16.512z"/></svg>
        <% end %>
        <%= button_to  team_path(team), method: :delete, class: "border-l text-red-500 rounded-lg py-3 px-5 bg-gray-100 font-medium" do %>
          <svg class="text-red-600 fill-current w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M6 2l2-2h4l2 2h4v2H2V2h4zM3 6h14l-1 14H4L3 6zm5 2v10h1V8H8zm3 0v10h1V8h-1z"/></svg>
        <% end %>
      </div>
    </div>

   
    <%#= link_to 'Back to teams', teams_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  
  <%# if action_name != "show" %>
    <%#= link_to "Show this team", team, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%#= link_to 'Edit this team', edit_team_path(team), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <%# end %>
</div>
